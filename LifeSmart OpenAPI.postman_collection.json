									"    }",
									"    return null;",
									"}",
									"",
									"//Get 10 digit timestamp",
									"function getTime() {",
									"    var tmp = Date.parse(new Date()).toString();",
									"    tmp = tmp.substr(0, 10);",
									"    return tmp;",
									"}",
									"",
									"//signature function",
									"function getSign(appkey, did, userid, time, apptoken, usertoken) {",
